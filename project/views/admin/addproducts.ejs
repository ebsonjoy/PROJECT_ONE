                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Description</label>
                                        <textarea placeholder="Type here" class="form-control" name="description" rows="4" id="product_description" required onkeyup="validateDescription()"></textarea>
                                        <span id="description-error" style="font-size: 14px;"></span>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <label class="form-label" for="brand">Brand name</label>
                                        <input type="text" placeholder="Type here" name="brand" class="form-control" id="brand" required onkeyup="validateName()">
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label" for="brand">Brand Color</label>
                                        <input type="text" placeholder="Type here" name="bandColor" class="form-control" id="brand" required onkeyup="validateName()">
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label" for="brand">Band Meterial</label>
                                        <input type="text" placeholder="Type here" name="bandMeterial" class="form-control" id="brand" required onkeyup="validateName()">
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label" for="brand">Warranty Type</label>
                                        <input type="text" placeholder="Type here" name="warrantyType" class="form-control" id="brand" required onkeyup="validateName()">
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label" for="brand">Warranty Description</label>
                                        <input type="text" placeholder="Type here" name="warrantyDescription" class="form-control" id="brand" required onkeyup="validateName()">
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label" for="brand">Country of Origin</label>
                                        <input type="text" placeholder="Type here" name="Country" class="form-control" id="brand" required onkeyup="validateName()">
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label" for="brand">Water resistance</label>
                                        <input type="text" placeholder="Type here" name="waterResi" class="form-control" id="brand" required onkeyup="validateName()">
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label" for="brand">Packaging & Delivery</label>
                                        <input type="text" placeholder="Type here" name="PackingDelivery" class="form-control" id="brand" required onkeyup="validateName()">
                                    </div>
                                    
                                </div> <!-- col.// -->
